<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PerfilAcitivty">

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Fechar"
        android:onClick="closeActivity"
        android:src="@drawable/baseline_arrow_back_24"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil do Usuário"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:src="@drawable/baseline_person_24"
        android:contentDescription="Foto do usuário"
        app:tint="#000000" />

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewUser"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/info_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endereço: Rua Exemplo, 123"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone: (11) 1234-5678"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idade: 25 anos"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altura: 1,75 m"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso: 70 kg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp" />

    </LinearLayout>
</RelativeLayout>
